      --modal-bg: #fff;
      --accent: #0070f3;
      --radius: 10px;
    }

    body {
      font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      background: #f4f4f4;
    }

    /* Modal Backdrop */
    .modal-backdrop {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: var(--backdrop);
      display: none;
      justify-content: center;
      align-items: center;
      z-index: 1000;
      opacity: 0;
      transition: opacity 0.4s ease-in-out;
    }

    .modal-backdrop.open {
      display: flex;
      opacity: 1;
    }

    /* Modal Container */
    .modal {
      background: var(--modal-bg);
      border-radius: var(--radius);
      max-width: 400px;
      width: 90%;
      padding: 20px;
      box-shadow: 0 4px 20px rgba(0,0,0,0.2);
      position: relative;
      transform: scale(0.95) translateY(-30px);
      opacity: 0;
      transition: transform 0.4s ease-in-out, opacity 0.4s ease-in-out;
    }

    .modal-backdrop.open .modal {
      transform: scale(1) translateY(0);
      opacity: 1;
    }

    /* Close Button */
    .modal-close {
      position: absolute;
      top: 10px;
      right: 10px;
      background: none;
      border: none;
      font-size: 24px;
      cursor: pointer;
      color: #666;
      transition: color 0.2s;
    }

    .modal-close:hover,
    .modal-close:focus {
      color: #000;
    }

    .modal-close:focus {
      outline: 2px solid var(--accent);
      outline-offset: 2px;
    }

    /* Modal Content */
    .modal-content {
      text-align: center;
    }

    .modal-content h2 {
